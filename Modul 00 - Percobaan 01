int counter = 0; // Deklarasi global

void setup() {
  Serial.begin(115200);
  delay(1000);
  Serial.println("Ahmad Farhan (13323018)");
  Serial.flush();
}

void loop() {
  Serial.print("Saya sudah berjalan sebanyak: ");
  Serial.print(counter);
  Serial.println(" kali");
  counter++;

  Serial.print("Saya sudah berjalan selama: ");
  Serial.print(millis());
  Serial.println(" milidetik");
  delay(1000);
}
